# Set the default registry
registry=https://registry.npmjs.org/

# Save exact versions of installed packages
save-exact=true

# Cache directory
cache=${HOME}/.npm/cache

# Always show progress during installation
progress=true

# Enable strict SSL
strict-ssl=true

# Authentication token for private packages (replace with your token)
# //registry.npmjs.org/:_authToken=YOUR_AUTH_TOKEN

# Default scope for private packages (replace with your scope)
# scope=@yourscope

# Set log level (silent, error, warn, info, verbose, silly)
loglevel=warn
